@model ShoppingList.Models.ShoppingItemViewModel

@{
    ViewData["Title"] = "Index";
}

<h4>Add new shoppingItem</h4>

<div class="background">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-10">
                @Html.Partial("_InputForm")
            </div>
        </div>
    </div>
</div>

<hr/>

<table class="table">
    <thead>
        <tr>
            <th>
                "Name"
            </th>
            <th>
                IsPurchased
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ShoppingItems) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPurchased)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
